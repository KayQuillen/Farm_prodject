<p id="notice"><%= notice %></p>

<h1>Inventory</h1>

<table class="table">
  <thead>
    <tr>
      <th>Type of</th>
      <th>Amount</th>
      <th>Expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.type_of %></td>
        <td><%= inventory.amount %></td>
        <td><%= inventory.expiration %></td>
        <td><%= link_to 'Show', inventory %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>The Total Inventory: <%= @total_amount %> </p>

<br>

<%= link_to 'New Inventory', new_inventory_path %>
